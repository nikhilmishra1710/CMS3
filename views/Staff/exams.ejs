<%- include('../Includes/begin.ejs') %> <%- include('../Includes/staff_nav.ejs')
%>
<section id="content-wrapper">
  <main role="main" class="pt-5 main">
    <div class="main-content">
      <!-- Header -->
      <div
        class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
        style="
          height: 100px;
          background-size: cover;
          background-position: center top;
        "
      >
        <!-- Header container -->
      </div>
      <!-- Page content -->
      <div class="container-fluid mt--7">
        <div class="row">
          <div class="col-xl-12 order-xl-1">
            <div class="card bg-secondary shadow">
              <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                  <div class="col-8">
                    <h3 class="mb-0">Scheduled Exams</h3>
                  </div>
                </div>
              </div>
              <div class="card-body">
                <h6 class="heading-small text-muted mb-4">
                  Exams || Click on an exam to view scores
                </h6>
                <div class="flex p-4">
                  <button class="btn btn-primary" onclick="window.print()">
                    Print
                  </button>
                  <button
                    class="btn btn-primary"
                    onclick="window.location.href='/staff/add-exam'"
                  >
                    Add Exam
                  </button>
                </div>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group focused">
                        <div class="table-responsive">
                          <!-- Check if there are any exams to display -->
                          <% if (exams.length > 0) { %>
                          <table class="table">
                            <thead class="thead-dark">
                              <tr>
                                <th scope="col">Course</th>
                                <th scope="col">Section</th>
                                <th scope="col">Semester</th>
                                <th scope="col">Date</th>
                                <th scope="col">Start Time</th>
                                <th scope="col">End Time</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% exams.forEach((exam) => { %>
                              <tr>
                                <td>
                                  <a href="/staff/exams/<%= exam.exam_id %>/update">
                                    <%= exam.course_name %> (<%= exam.exam_id
                                    %>)
                                  </a>
                                </td>

                                <td><%= exam.section %></td>
                                <td><%= exam.semester %></td>
                                <td><%= exam.date %></td>
                                <td><%= exam.start_time %></td>
                                <td><%= exam.end_time %></td>
                              </tr>
                              <% }) %>
                            </tbody>
                          </table>
                          <% } else { %>
                          <p>No exams scheduled.</p>
                          <% } %>
                          <a href="/staff/dashboard">Back to Dashboard</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</section>
<%- include('../Includes/end.ejs') %>
